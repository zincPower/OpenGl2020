<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zinc.texture.sample.egl.SampleSurfaceView
        android:id="@+id/sample_surface_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/min"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="MIN"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center"
            />

        <RadioButton
            android:id="@+id/min_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="LL"
            />

        <RadioButton
            android:id="@+id/min_ln"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="LN"
            />

        <RadioButton
            android:id="@+id/min_nl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="NL"
            />

        <RadioButton
            android:id="@+id/min_nn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="NN"
            />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/mag"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="MAG"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center"
            />

        <RadioButton
            android:id="@+id/mag_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="LL"
            />

        <RadioButton
            android:id="@+id/mag_ln"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="LN"
            />

        <RadioButton
            android:id="@+id/mag_nl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="NL"
            />

        <RadioButton
            android:id="@+id/mag_nn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="NN"
            />

    </RadioGroup>

</LinearLayout>