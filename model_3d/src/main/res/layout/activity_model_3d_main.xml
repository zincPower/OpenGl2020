<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/control_bar"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/itemTitle"
                android:text="渲染类型" />

            <RadioGroup
                android:id="@+id/rendering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="点"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="线"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="颜色"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/texture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="纹理"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

            </RadioGroup>

        </LinearLayout>
    </ScrollView>

    <com.zinc.model_3d.egl.Model3DSurfaceView
        android:id="@+id/surface"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/model_bar"
        app:layout_constraintStart_toEndOf="@id/control_bar"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView
        android:id="@+id/model_bar"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/itemTitle"
                android:text="光源" />

            <RadioGroup
                android:id="@+id/light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/direction_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="定向光"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

            </RadioGroup>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>