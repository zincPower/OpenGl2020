<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextureView
        android:id="@+id/texture_view_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/v_divider_1"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_divider_1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/texture_view_1"
        app:layout_constraintBottom_toTopOf="@id/texture_view_2"
        />

    <TextureView
        android:id="@+id/texture_view_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/v_divider_2"
        app:layout_constraintTop_toBottomOf="@id/v_divider_1" />

    <View
        android:id="@+id/v_divider_2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/texture_view_2"
        app:layout_constraintBottom_toTopOf="@id/texture_view_3"
        />

    <TextureView
        android:id="@+id/texture_view_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/btn_render"
        app:layout_constraintTop_toBottomOf="@id/v_divider_2" />

    <Button
        android:id="@+id/btn_render"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="渲染"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>